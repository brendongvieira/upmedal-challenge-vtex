  "list-context.product-list#promocao": {
    "blocks": ["product-summary.shelf"],
    "children": ["slider-layout#promocao"],
    "props": {
      "category": "20/24",
      "hideUnavailableItems": true,
      "blockClass": "promocao"
    }
  },

  "slider-layout#promocao": {
    "props": {
      "itemsPerPage": {
        "desktop": 2,
        "tablet": 2,
        "phone": 2
      },
      "infinite": true,
      "showNavigationArrows": "false",
      "blockClass": "promocao",
      "autoPlay": {
        "timeout": 5000,
